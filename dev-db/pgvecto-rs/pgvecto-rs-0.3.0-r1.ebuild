src_prepare() {
	eapply_user

	local PGRX_GIT="git = \"https://github.com/tensorchord/pgrx.git\", branch = \"v0.12.0-alpha.1-patch3\""
	local PGRX_PATH="path = \"${WORKDIR}/pgrx-${PGRX_COMMIT}/pgrx\""

	sed -e "s#${PGRX_GIT}#${PGRX_PATH}#" \
		-i "${S}/Cargo.toml" || die "Cargo fetch workaround failed"

	# Can't pass host flags
	filter-flags '-mcpu=*' '-march=*' '-mtune=*'

	sed -e "s/@CARGO_VERSION@/${PV}/g" -i vectors.control || die Failed setting version in vectors.control

	postgres-multi_src_prepare
}

src_compile() {
	pgrx_build() {
		cd "${WORKDIR}"/pgrx-"${PGRX_COMMIT}" || die
		cargo_src_compile -p cargo-pgrx

		local pgrx_path="${WORKDIR}"/pgrx-"${PGRX_COMMIT}"/"$(cargo_target_dir)"
		export PATH="${PATH}:${pgrx_path}"
	}

	vectors_build() {
		cargo_env cargo pgrx init --pg"${PG_SLOT}" "${PG_CONFIG}" || die Failed setting up pgrx for pg slot "${PG_SLOT}"
		cargo_src_compile --features pg"${PG_SLOT}"
	}

	pgrx_build || die
	postgres-multi_foreach vectors_build
}

src_install() {
	vectors_install() {
		insinto "$(${PG_CONFIG} --pkglibdir)"
		doins "$(cargo_target_dir)"/libvectors.so

		insinto "$(${PG_CONFIG} --sharedir)"/extension
		doins sql/install/vectors--* sql/upgrade/vectors--* vectors.control
	}

	postgres-multi_foreach vectors_install
}
